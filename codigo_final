import random

def obter_palpite():
   
    while True:
        try:
            return int(input("Digite seu palpite (entre 1 e 100): "))
        except ValueError:
            print("Entrada inv√°lida! Por favor, insira um n√∫mero inteiro.")

def jogo_adivinhacao():
    
    print("Bem-vindo ao Jogo da Adivinha√ß√£o!")
    print("Eu pensei em um n√∫mero entre 1 e 100. Voc√™ consegue adivinhar?")
    print("Dica: Direi se voc√™ est√° perto ou longe do n√∫mero correto.")
    
    numero_secreto = random.randint(1, 100)
    tentativas = 0
    acertou = False
    
    while not acertou:
        palpite = obter_palpite()
        tentativas += 1
        diferenca = abs(numero_secreto - palpite)
        
        if palpite < numero_secreto:
            if diferenca <= 10:
                print("Muito baixo, mas voc√™ est√° quente! Tente novamente.")
            else:
                print("Muito baixo, voc√™ est√° frio. Tente novamente.")
        elif palpite > numero_secreto:
            if diferenca <= 10:
                print("Muito alto, mas voc√™ est√° quente! Tente novamente.")
            else:
                print("Muito alto, voc√™ est√° frio. Tente novamente.")
        else:
            print(f"üéâ Parab√©ns! Voc√™ acertou o n√∫mero {numero_secreto} em {tentativas} tentativa(s)!")
            acertou = True

if __name__ == "__main__":
    jogo_adivinhacao()
