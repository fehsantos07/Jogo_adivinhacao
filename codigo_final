import random

def obter_palpite():
   
    while True:
        try:
            return int(input("Digite seu palpite (entre 1 e 100): "))
        except ValueError:
            print("Entrada invÃ¡lida! Por favor, insira um nÃºmero inteiro.")

def jogo_adivinhacao():

    print("Bem-vindo ao Jogo da AdivinhaÃ§Ã£o!")
    print("Eu pensei em um nÃºmero entre 1 e 100. VocÃª consegue adivinhar?")

    numero_secreto = random.randint(1, 100)
    tentativas = 0
    acertou = False
    
    while not acertou:
        palpite = obter_palpite()
        tentativas += 1
        
        if palpite < numero_secreto:
            print("Muito baixo! Tente novamente.")
        elif palpite > numero_secreto:
            print("Muito alto! Tente novamente.")
        else:
            print(f"ğŸ‰ ParabÃ©ns! VocÃª acertou o nÃºmero {numero_secreto} em {tentativas} tentativa(s)!")
            acertou = True

if __name__ == "__main__":
    jogo_adivinhacao()
