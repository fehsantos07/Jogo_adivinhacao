while not acertou:
    try:
        palpite = int(input("Digite seu palpite: "))
        tentativas += 1
        diferenca = abs(numero_secreto - palpite)
        
        if palpite < numero_secreto:
            if diferenca <= 10:
                print("Muito baixo, mas vocÃª estÃ¡ quente! Tente novamente.")
            else:
                print("Muito baixo, vocÃª estÃ¡ frio. Tente novamente.")
        elif palpite > numero_secreto:
            if diferenca <= 10:
                print("Muito alto, mas vocÃª estÃ¡ quente! Tente novamente.")
            else:
                print("Muito alto, vocÃª estÃ¡ frio. Tente novamente.")
        else:
            print(f"ðŸŽ‰ ParabÃ©ns! VocÃª acertou o nÃºmero {numero_secreto} em {tentativas} tentativa(s)!")
            acertou = True
    except ValueError:
        print("Por favor, digite um nÃºmero vÃ¡lido.")
